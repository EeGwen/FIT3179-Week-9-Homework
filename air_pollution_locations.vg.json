{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Malaysia — monitoring locations. Points colored by whether PWStation (official station code) exists.",
  "width": 900,
  "height": 700,
  "title": {
    "text": "Malaysia — Air Quality Monitoring Locations",
    "subtitle": "Blue = Official monitoring station (PWStation present). Data: full_locations_trimmed.csv"
  },
  "projection": {
    "type": "mercator",
    "center": [110.0, 4.0],
    "scale": 2500
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/EeGwen/FIT3179-Week-9-Homework/refs/heads/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f5f7fb", "stroke": "#cfd8e3"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"}
        ]
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/EeGwen/FIT3179-Week-9-Homework/refs/heads/main/full_locations_trimmed.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "calculate": "datum.PWStation != null && datum.PWStation !== '' ? 1 : 0",
          "as": "has_official_station"
        },
        {
          "filter": "datum.latitude != null && datum.longitude != null"
        }
      ],
      "mark": {"type": "circle", "stroke": "white", "strokeWidth": 0.6, "opacity": 0.95},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"value": 120},
        "color": {
          "field": "has_official_station",
          "type": "nominal",
          "scale": {"domain": [0, 1], "range": ["#ff7f0e", "#1f77b4"]},
          "legend": {"title": "Station type", "labels": ["Other / Unknown", "Official (PWStation)"]}
        },
        "tooltip": [
          {"field": "identifying_location", "type": "nominal", "title": "Location"},
          {"field": "place", "type": "nominal"},
          {"field": "city", "type": "nominal"},
          {"field": "state", "type": "nominal"},
          {"field": "PWStation", "type": "nominal", "title": "PWStation"}
        ]
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/EeGwen/FIT3179-Week-9-Homework/refs/heads/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "#dbe6f2", "strokeWidth": 0.5, "fill": null}
    }
  ]
}
